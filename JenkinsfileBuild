pipeline{
    parameters {
        string(name: 'NAME', defaultValue: 'wordpress-image')
    }
    agent none
    stages{
        stage ("build"){
            agent { 
                label 'master'  
            }
            steps{
             sh ("docker build -t ${params.NAME} .")
             sh ("docker build -t my-mariadb -f DockerfileMaria .")
            }
        }
    }
}
